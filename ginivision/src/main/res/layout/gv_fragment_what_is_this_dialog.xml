<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gv_digital_invoice_what_is_this_dialog_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/gv_digital_invoice_what_is_this_dialog_item_vertical_padding"
        android:paddingStart="@dimen/gv_digital_invoice_what_is_this_dialog_item_horizontal_padding"
        android:paddingEnd="@dimen/gv_digital_invoice_what_is_this_dialog_item_horizontal_padding"
        android:paddingBottom="@dimen/gv_digital_invoice_what_is_this_dialog_item_vertical_padding"
        android:text="@string/gv_digital_invoice_what_is_this_dialog_title"
        android:textAppearance="@style/GiniVisionTheme.DigitalInvoice.WhatIsThisDialog.Title.TextStyle" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/gv_digital_invoice_what_is_this_dialog_item_horizontal_padding"
        android:paddingEnd="@dimen/gv_digital_invoice_what_is_this_dialog_item_horizontal_padding"
        android:paddingBottom="@dimen/gv_digital_invoice_what_is_this_dialog_item_vertical_padding"
        android:text="@string/gv_digital_invoice_what_is_this_dialog_message"
        android:textAppearance="@style/GiniVisionTheme.DigitalInvoice.WhatIsThisDialog.Message.TextStyle" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gv_digital_invoice_what_is_this_dialog_divider" />

    <ListView
        android:id="@+id/gv_digital_invoice_what_is_this_dialog_responses"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/gv_digital_invoice_what_is_this_dialog_divider"
        android:dividerHeight="1dp"
        tools:listitem="@layout/gv_item_digital_invoice_what_is_this_dialog_response" />

</LinearLayout>