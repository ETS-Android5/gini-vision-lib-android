<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gv_onboarding_fragment_background">

    <android.support.v4.view.ViewPager
        android:id="@+id/gv_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/gv_layout_page_indicators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/gv_onboarding_indicators_vertical_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/gv_page_indicator_1"
            android:layout_width="@dimen/gv_onboarding_indicator_width"
            android:layout_height="@dimen/gv_onboarding_indicator_height"
            android:scaleType="center"
            android:src="@drawable/gv_onboarding_indicator_active" />

        <Space
            android:layout_width="@dimen/gv_onboarding_indicator_width"
            android:layout_height="@dimen/gv_onboarding_indicator_height" />

        <ImageView
            android:id="@+id/gv_page_indicator_2"
            android:layout_width="@dimen/gv_onboarding_indicator_width"
            android:layout_height="@dimen/gv_onboarding_indicator_height"
            android:scaleType="center"
            android:src="@drawable/gv_onboarding_indicator_inactive" />

        <Space
            android:layout_width="@dimen/gv_onboarding_indicator_width"
            android:layout_height="@dimen/gv_onboarding_indicator_height" />

        <ImageView
            android:id="@+id/gv_page_indicator_3"
            android:layout_width="@dimen/gv_onboarding_indicator_width"
            android:layout_height="@dimen/gv_onboarding_indicator_height"
            android:scaleType="center"
            android:src="@drawable/gv_onboarding_indicator_inactive" />

        <Space
            android:layout_width="@dimen/gv_onboarding_indicator_width"
            android:layout_height="@dimen/gv_onboarding_indicator_height" />

        <ImageView
            android:id="@+id/gv_page_indicator_4"
            android:layout_width="@dimen/gv_onboarding_indicator_width"
            android:layout_height="@dimen/gv_onboarding_indicator_height"
            android:src="@drawable/gv_onboarding_camicon" />
    </LinearLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/gv_button_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/gv_fab_vertical_margin"
        android:layout_marginRight="@dimen/gv_fab_horizontal_margin"
        android:background="@android:color/transparent"
        android:src="@drawable/gv_next"
        app:useCompatPadding="true" />

</RelativeLayout>