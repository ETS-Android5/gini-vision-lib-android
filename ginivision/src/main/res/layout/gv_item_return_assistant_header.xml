<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gv_return_assistant_header_background"
    android:paddingStart="@dimen/gv_return_assistant_header_padding_left"
    android:paddingTop="@dimen/gv_return_assistant_header_padding_top"
    android:paddingEnd="@dimen/gv_return_assistant_header_padding_right"
    android:paddingBottom="@dimen/gv_return_assistant_header_padding_bottom">

    <TextView
        android:id="@+id/gv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/gv_return_assistant_header_title_horizontal_margin"
        android:layout_marginTop="@dimen/gv_return_assistant_header_title_margin_top"
        android:layout_marginEnd="@dimen/gv_return_assistant_header_title_horizontal_margin"
        android:gravity="center_horizontal"
        android:lineSpacingMultiplier="1.3"
        android:text="@string/gv_return_assistant_scan_success"
        android:textAppearance="@style/GiniVisionTheme.ReturnAssistant.Title.TextStyle" />

    <ImageView
        android:id="@+id/gv_hero_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/gv_return_assistant_header_hero_image_margin_top"
        android:layout_marginBottom="@dimen/gv_return_assistant_header_hero_image_margin_bottom"
        android:src="@drawable/gv_return_assistant_hero_img" />

    <RelativeLayout
        android:id="@+id/gv_line_items_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gv_hero_image">

        <TextView
            android:id="@+id/gv_selected_and_total_items_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/help"
            android:layout_alignParentStart="true"
            android:text="@string/gv_return_assistant_items"
            android:textAppearance="@style/GiniVisionTheme.ReturnAssistant.SelectedAndTotalItems.TextStyle" />

        <TextView
            android:id="@+id/gv_selected_and_total_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/help"
            android:layout_toEndOf="@id/gv_selected_and_total_items_label"
            android:textAppearance="@style/GiniVisionTheme.ReturnAssistant.SelectedAndTotalItems.TextStyle"
            tools:text=" 2/2" />

        <Button
            android:id="@+id/help"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/gv_return_assistant_header_help_margin_right"
            android:drawableEnd="@drawable/gv_help_icon_dark"
            android:drawablePadding="@dimen/gv_return_assistant_header_help_button_padding"
            android:text="@string/gv_return_assistant_help"
            android:textAllCaps="false"
            android:textAppearance="@style/Root.GiniVisionTheme.ReturnAssistant.Help.TextStyle" />
    </RelativeLayout>

</RelativeLayout>
